@model WebApplication6Api.Database.Entities.Parcel

@{
    ViewData["Title"] = "View";
}

<h1>View</h1>

<h4>Parcel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @if (Model.DeliveredDate == DateTimeOffset.MinValue)
        {
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            @if (Model.ShippedDate == DateTimeOffset.MinValue)
            {
                <div class="form-group">
                    <label asp-for="Addressee" class="control-label"></label>
                    <input asp-for="Addressee" class="form-control" />
                    <span asp-validation-for="Addressee" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="City" class="control-label"></label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PostalCode" class="control-label"></label>
                    <input asp-for="PostalCode" class="form-control" />
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Country" class="control-label"></label>
                    <input asp-for="Country" class="form-control" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Weight" class="control-label"></label>
                    <input asp-for="Weight" class="form-control" />
                    <span asp-validation-for="Weight" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ContactNumber" class="control-label"></label>
                    <input asp-for="ContactNumber" class="form-control" />
                    <span asp-validation-for="ContactNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RegisteredDate" class="control-label"></label>
                    <input asp-for="RegisteredDate" class="form-control" />
                    <span asp-validation-for="RegisteredDate" class="text-danger"></span>
                </div>
            }
            else
            {
                <input type="hidden" asp-for="Addressee" />
                <input type="hidden" asp-for="Address" />
                <input type="hidden" asp-for="City" />
                <input type="hidden" asp-for="PostalCode" />
                <input type="hidden" asp-for="Country" />
                <input type="hidden" asp-for="Weight" />
                <input type="hidden" asp-for="ContactNumber" />
                <input type="hidden" asp-for="RegisteredDate" />
            }

            @if (Model.ShippedDate == DateTimeOffset.MinValue)
            {

                <div class="form-group">
                    <label asp-for="ShippedDate" class="control-label"></label>
                    <input type="date" asp-for="ShippedDate" value="@DateTimeOffset.UtcNow" class="form-control" />
                    <span asp-validation-for="ShippedDate" class="text-danger"></span>
                </div>
            }
            else
            {
                <input type="hidden" asp-for="ShippedDate" />
            }
            @if (Model.ShippedDate != DateTimeOffset.MinValue)
            {
                <input type="hidden" asp-for="ShippedDate" />
                <div class="form-group">
                    <label asp-for="DeliveredDate" class="control-label"></label>
                    <input type="date" asp-for="DeliveredDate" value="@DateTimeOffset.UtcNow" class="form-control" />
                    <span asp-validation-for="DeliveredDate" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        }
        else
            {
            @Html.Raw("Contents cannot be edited, the item has already been delivered.")
            }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
